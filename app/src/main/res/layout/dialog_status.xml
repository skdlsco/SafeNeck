<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="300dp"
    android:layout_gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:padding="16dp">

        <com.safeneck.safeneck.View.LetterSpacingTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nanum_barun_gothic"
            android:text="실시간 자세 상태 확인"
            android:textColor="@color/colorWhite"
            android:textSize="20sp" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/dialog_status_img"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_marginTop="45dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/ic_daily_sogood" />

        <com.safeneck.safeneck.View.LetterSpacingTextView
            android:id="@+id/dialog_status_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/dialog_status_img"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="13dp"
            android:fontFamily="@font/nanum_barun_gothic_bold"
            android:text="정상"
            android:textColor="@color/colorVeryGood"
            android:textSize="20sp" />
    </RelativeLayout>
</LinearLayout>