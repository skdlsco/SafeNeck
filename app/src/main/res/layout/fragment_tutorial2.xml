<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="32dp"
    tools:context="com.safeneck.safeneck.Fragment.TutorialFragment">

    <ImageView
        android:id="@+id/fragment_tutorial_img"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginBottom="40dp" />

    <com.safeneck.safeneck.View.LetterSpacingTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/nanum_barun_gothic_bold"
        android:text="데일리 리포트"
        android:textColor="@color/colorWhite"
        android:textSize="18sp"
        app:letterSpacing="1" />

    <com.safeneck.safeneck.View.LetterSpacingTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:fontFamily="@font/nanum_barun_gothic"
        android:text="사용자의 그날 그날 상태변화에 대한 리포트를 이전의 기록과 비교, 분석하여 코멘트 및 그래프로 보여줍니다"
        android:textAlignment="center"
        android:textColor="@color/colorWhite"
        android:textSize="11sp"
        app:letterSpacing="1" />
</LinearLayout>
